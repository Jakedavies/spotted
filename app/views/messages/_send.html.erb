<div>
  <%= form_for :messages , :url => messages_path, :html => {:method => :post}, :user_id => :user_id do |f| %>
      <%= f.hidden_field :user_id, :value => params[:user_id] %>
      Post: <%= f.text_area :body, :cols => "50", :rows => "10", :maxlength => "600" %> <br>
      <%= f.submit "Send" %>
  <% end %>
</div>
